<%= form_with model: listing, local: true do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title, value: listing.title %>
    </div>
    <div>
        <%= form.label :model %>
        <%= form.text_field :model, value: listing.model %>
    </div>
    <div>
        <%= form.label :description %>
        <%= form.text_area :description, value: listing.description %>
    </div>
    <div>
        <%= form.label :size %>
        <%= form.text_field :size, value: listing.size %>
    </div>
    <div>
        <%= form.label :price %>
        <%= form.number_field :price, value: listing.price, min: 0 %>
    </div>
    <div>
        <%= form.label :location %>
        <%= form.text_field :location, value: listing.location%>
    </div>
    <div>
        <%= form.label :postcode %>
        <%= form.number_field :postcode, value: listing.postcode %>
    </div>
    <div>
        <%= form.label :image %>
        <%= form.file_field :picture, accept: "image/png,image/gif,image/jpeg,image/jpg" %>
    </div>
    <div>
        <%= form.submit %>
    </div>

# missing a couple of fields
<% end %>